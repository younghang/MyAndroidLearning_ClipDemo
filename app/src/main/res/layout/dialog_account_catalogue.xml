<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_account_catalogue_horizontal_recyclerView"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"></android.support.v7.widget.RecyclerView>

        <ImageButton
            android:id="@+id/dialog_account_catalogue_addNewCatalogueBtn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@color/transparent"
            app:srcCompat="@drawable/add_gray" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/cardview_shadow_start_color" />
 <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/dialog_account_catalogue_recyclerView"
        >

    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/dialog_account_catalogue_chooseCatalogueBtn"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_width="match_parent"
        style="?android:attr/borderlessButtonStyle"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_background_green"
        android:text="选择 "
        />
    <View android:layout_width="match_parent"
        android:layout_height="20dp">

    </View>
</LinearLayout>
</android.support.v7.widget.CardView>