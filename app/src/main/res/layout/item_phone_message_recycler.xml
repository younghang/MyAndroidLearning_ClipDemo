<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.yanghang.myapplication.OthersView.MessageText
        android:id="@+id/tv_message_item_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/image_phone"
        android:background="@color/message_bg_color"
        android:ellipsize="end"
        android:maxLines="9"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:selfMessage="true" />

    <ImageView
        android:id="@+id/image_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_phone_android_black_48dp" />
</RelativeLayout>