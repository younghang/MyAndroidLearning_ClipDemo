<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_computer_black_48dp" />

    <com.example.yanghang.myapplication.ListPackage.MessageList.MessageText
        android:id="@+id/tv_message_item_pc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/image_pc"
        android:background="@color/white"
        android:ellipsize="end"
        android:maxLines="9"
        android:paddingRight="10dp"
        android:textColor="@color/message_text"
        android:textSize="16sp"
        app:selfMessage="false" />

</RelativeLayout>