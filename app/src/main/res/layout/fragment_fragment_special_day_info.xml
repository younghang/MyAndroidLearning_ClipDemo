<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context="com.example.yanghang.clipboard.Fragment.FragmentSpecialDayInfo">

    <!-- TODO: Update blank fragment layout -->
 <LinearLayout
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <com.example.yanghang.clipboard.OthersView.ClockView
         android:layout_width="180dp"
         android:layout_margin="50dp"
         android:layout_gravity="center"
         android:layout_height="180dp" />
     <TextView
         android:textSize="24sp"
         android:textColor="@color/black_80000000"
         android:layout_marginLeft="40dp"
         android:text="距离已经过去了..."
         android:id="@+id/fragment_special_day_tv"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />
     <GridView
            android:background="@color/deep_gray"
         android:id="@+id/fragment_special_day_gridView"
         android:layout_marginLeft="40dp"
         android:layout_marginRight="40dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:columnWidth="79dp"
         android:gravity="center"
         android:padding="1dp"
         android:horizontalSpacing="1dp"
         android:numColumns="3"
         android:verticalSpacing="1dp" >
     </GridView>

 </LinearLayout>

</FrameLayout>
